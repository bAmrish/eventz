  <% @events.each do |event| %>  
  <section class="event">
    <div class="summary">
      <h2> <%= link_to(event.name, event)%></h2>
      <!--<h2><%= event.name%></h2> -->
      <h3>
        <%= date_and_time(event)%> in <%= event.location%>
      </h3>
      <span class="price"><%=price(event)%></span>
      <p> 
        <%= event.description.truncate(35, separator: ' ')%> 
      </p>
    </div>
  </section>
  <% end %>

  <section class="admin">
    <%= link_to 'Create New Event', new_event_path, class: 'button' %>
  </section>

