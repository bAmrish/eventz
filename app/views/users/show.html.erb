<section class="user">
  <h1> <%= @user.name %> </h1>
  <h2> <%= mail_to(@user.email) %> </h2>
  <% if is_current_user?(@user) %>
    <div class="actions">
      <%= link_to "Edit Account", edit_user_path(@user), {class: 'button edit'} %>
      <%= link_to "Delete Account", @user, 
        {
          class: 'button delete', 
          data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?'}
        } 
      %>
    </div>
  <% end %>
  
  <% if @user.registrations.present? %>
    <h3> Registrations </h3>
    <% @user.registrations.each do |reg| %>
      <div class="registration">
        <div class="image" >
          <%= link_to image_tag(reg.event.image_file_name), reg.event %>
        </div>
        <div class="name" >
          <%= link_to reg.event.name, reg.event %>
        </div>
        <div class="date">
          <%= time_ago_in_words(reg.created_at) %> ago
        </div>
      </div>
    <% end %>
  <% end %>
</section> 